        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/financialsTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="24dp"
            android:textColor="@android:color/white"
            android:text="Financials"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BalanceTV"
            app:layout_constraintTop_toBottomOf="@id/financialsTV"
            android:text="Balance: $XYZ"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NetWorthTV"
            app:layout_constraintTop_toBottomOf="@id/BalanceTV"
            android:text="Net Worth: $XYZ"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </android.support.constraint.ConstraintLayout>

